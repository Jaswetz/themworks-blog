---
layout: article
---

<% wrap_layout :layout do %>
  <article>
  	<header class="entry-header entry-meta">
	    <h1 class="entry-header"><%= current_page.title %></h1>
	    	<div class="by-author"> 
				<span class="author vcard entry-author">
					<span class="by">by</span>
					<span rel="author"><%= current_page.data.author %></span>
				</span>
				 <time class="entry-date"><%= current_page.date.strftime('%b %e %Y') %></time>
			</div><!-- \by-author -->	
	</header>
    <div class="entry-content">
    	<%= yield %>
    </div>
  </article>
<% end %>