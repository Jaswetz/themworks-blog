        <div class="article-list- scroll">
            <div class="article-list- wrap">
                <% blog.articles[0...5].each do |article| %>
                  <article class="article-list-item">
                    <header class="entry-header entry-meta">
                      <h1 class="entry-header"><a href="<%= article.url %>"><%= article.title %></a></h1>

                      <time class="entry-date"><%= article.date.strftime('%b %e %Y') %></time>
                    </header>
                  </article>
                <% end %>
            </div>
        </div>


    <header class="primary-header">
        <div class="logo">
            <% link_to '/index.html' do %>
                <h1>themworks</h1>
            <% end %>
        </div>
        <div class="article-list-bar">
            <div class="btn-articleList">
                <i class="icon-dots"></i>
            </div>
        </div>
        <div class="branding-colors">
            <div class="orange"></div>
            <div class="red"></div>
            <div class="yellow"></div>
        </div>
    </header>

    <div class="page">
        <%= yield %>
    </div>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.8.0.min.js"><\/script>')</script>
        <script src="js/plugins.js"></script>
        <script src="js/main.js"></script>

        <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
